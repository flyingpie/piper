@using Blazor.Diagrams
@using Piper.Core
@using Piper.Core.Utils
@inherits LayoutComponentBase

@code
{
	[Inject]
	public BlazorDiagram Diagram { get; set; }

	public async Task DoStuff()
	{
		// Diagram.Nodes
	}
}

<RadzenComponents/>

<RadzenLayout>
	<RadzenSidebar>
		<RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween" style="height: 100%;">
			<LeftNav/>

			<RadzenStack AlignItems="AlignItems.Center" class="rz-mb-4" Gap="8">
				<RadzenButton Text="Do Stuff" Click="DoStuff" />

				<RadzenButton Variant="Variant.Text" Size="ButtonSize.Small" Click="@(() => Os.OpenUrl(PiperConstants.DocumentationUrl))">Docs</RadzenButton>
				<RadzenButton Variant="Variant.Text" Size="ButtonSize.Small" Click="@(() => Os.OpenUrl(PiperConstants.GitHubUrl))">GitHub</RadzenButton>

				<div class="rz-color-base-500 rz-mt-2">Piper @PiperConstants.AppVersion</div>
			</RadzenStack>
		</RadzenStack>
	</RadzenSidebar>
	<RadzenBody>
		<div class="rz-p-4">
			<RadzenRow>
				<RadzenColumn>
					@Body
				</RadzenColumn>
			</RadzenRow>
		</div>
	</RadzenBody>

</RadzenLayout>

<style>
	body {
		background: #19191a;
	}
</style>