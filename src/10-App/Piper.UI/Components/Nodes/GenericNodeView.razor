@typeparam TNode where TNode : Piper.Core.Nodes.IPpNode
@inherits NodeViewBase<TNode>

<NodeView Node="Node">

	@foreach (var prop in Node.NodeProps)
	{
		if (prop is MyParam param)
		{
			<PpNodeParam Param="param" />
		}

		else if (prop is MyPortModel port)
		{
			<PpNodePort Port="port"/>
		}
	}

</NodeView>