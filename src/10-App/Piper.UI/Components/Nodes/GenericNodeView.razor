<NodeView Node="Node">

	@foreach (var prop in Node.NodeProps)
	{
		if (prop is Core.PpNodeParam param)
		{
			<PpNodeParam Param="param" IsInNode="true" />
		}

		else if (prop is Core.PpNodePort port)
		{
			<PpNodePort NodePort="port"/>
		}
	}

	@if (Node.IsExecuting)
	{
		if (Node.SupportsProgress)
		{
			<RadzenProgressBar Min="0" Max="1" @bind-Value="Node.Progress" ShowValue="false" ProgressBarStyle="ProgressBarStyle.Light" />
		}
		else
		{
			<RadzenProgressBar Mode="ProgressBarMode.Indeterminate" Value="100" ShowValue="false" ProgressBarStyle="ProgressBarStyle.Light" />
		}
	}

	@if (Node.Duration != null)
	{
		<RadzenStack Orientation="Orientation.Horizontal" class="rz-color-base-500">
			<RadzenIcon Icon="timer" />
			@(Node.Duration.Value.ToString(@"mm\:hh\:ss\.fff"))
		</RadzenStack>
	}

</NodeView>