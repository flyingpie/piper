@using Piper.Core
@using Piper.UI.Components.CodeEditor

@if (Param.Type == typeof(bool))
{
	<RadzenFormField Text="@Param.Name" Style="width: 100%;">
		<RadzenCheckBox
			@bind-Value="@Param.ValueAsBool"
			@onmousedown:stopPropagation
			@onmousemove:stopPropagation
		/>
	</RadzenFormField>
}

@if (Param.Type == typeof(int))
{
	<RadzenFormField Text="@Param.Name" Style="width: 100%;">
		<RadzenNumeric
			@bind-Value="@Param.ValueAsInt"
			@onmousedown:stopPropagation
			@onmousemove:stopPropagation
		/>
	</RadzenFormField>
}

@if (Param.Type == typeof(string))
{
	switch (Param.Hint)
	{
		case PpParamHint.Code:
			<PpCodeEditor Language="sql" @bind-Text="Param.ValueAsString" />
			break;
		default:
			<RadzenFormField Text="@Param.Name" Style="width: 100%;">
				<RadzenTextBox
					@bind-Value="@Param.ValueAsString"
					@onmousedown:stopPropagation
					@onmousemove:stopPropagation
				/>
			</RadzenFormField>
			break;
	}
}

