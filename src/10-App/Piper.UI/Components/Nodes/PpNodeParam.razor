<RadzenFormField Text="@Param.Name" Style="width: 100%;">

	@if (Param.Value is int)
	{
		<RadzenNumeric
			@bind-Value="@Param.ValueAsInt"
			@onmousedown:stopPropagation
			@onmousemove:stopPropagation
		/>
	}

	@if (Param.Value is string)
	{
		<RadzenTextBox
			@bind-Value="@Param.ValueAsString"
			@onmousedown:stopPropagation
			@onmousemove:stopPropagation
		/>
	}

</RadzenFormField>